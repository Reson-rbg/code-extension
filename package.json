{
  "name": "themesite",
  "publisher": "local-user",
  "displayName": "themesite",
  "description": "这是一个尝试学习开发vscode主题插件的项目",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.108.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "themes": [
      {
        "label": "Themesite Dark",
        "uiTheme": "vs-dark",
        "path": "./themes/dark-theme.json"
      },
      {
        "label": "Themesite Light",
        "uiTheme": "vs",
        "path": "./themes/light-theme.json"
      }
    ],
    "commands": [
      {
        "command": "themesite.applyTheme",
        "title": "Themesite: Force Update Theme Logic"
      }
    ],
    "configuration": {
      "title": "Themesite Configuration",
      "properties": {
        "themesite.dayTheme": {
          "type": "string",
          "default": "Themesite Light",
          "description": "The theme to use during the day (6 AM - 6 PM)."
        },
        "themesite.nightTheme": {
          "type": "string",
          "default": "Themesite Dark",
          "description": "The theme to use during the night (6 PM - 6 AM)."
        },
        "themesite.autoSwitch": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic theme switching based on time."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "yarn run check-types && yarn run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "yarn run check-types && yarn run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.108.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.52.0",
    "eslint": "^9.39.2",
    "esbuild": "^0.27.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
